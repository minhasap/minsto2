<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>MinSto Signup</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		
		<!-- MATERIAL DESIGN ICONIC FONT -->
		<link rel="stylesheet" href="/user/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

		<!-- STYLE CSS -->
		<link rel="stylesheet" href="/user/css/css/signupstyle.css">

		<script>   
			function capitalizeFirstLetter(input) {
				input.value = input.value.charAt(0).toUpperCase() + input.value.slice(1);
			}
		</script>
		
	</head>

	<body>

		<div >
			<div class="inner ">
				<div class="image-holder ">
					<img src="/user/images/shoe.png" alt="">
				</div>

				<form method="post">
					<h3>Sign up</h3>
					<div class="form-group">
						<input type="text" name="firstName" oninput="capitalizeFirstLetter(this)" placeholder="First Name" class="form-control">
						<input type="text" name="lastName" oninput="capitalizeFirstLetter(this)" placeholder="Last Name" class="form-control">
					</div>
					<div class="form-wrapper">
						<input type="text" name="userName" placeholder="Username" class="form-control">
						<i class="zmdi zmdi-account"></i>
					</div>
					<div class="form-wrapper">
						<input type="text" name="email" placeholder="Email Address" class="form-control">
						<i class="zmdi zmdi-email"></i>
					</div>
					<div class="form-wrapper">
						<input name="phone" type="text" placeholder="Phone number" class="form-control">
						<i class="zmdi zmdi-caret-down" style="font-size: 17px"></i>
					</div>
					<div class="form-wrapper">
						<input name="password" type="password" placeholder="Password" class="form-control">
						<i class="zmdi zmdi-lock"></i>
					</div>
					<div class="form-wrapper">
						<input name="re_password" type="password" placeholder="Confirm Password" class="form-control">
						<i class="zmdi zmdi-lock"></i>
					</div>

					<div class="form-wrapper">
						<input class="register" type="submit" name="signup" value="signup">
					</div>
					
					<% if (typeof messageFailed !== 'undefined') { %>
						<p style="color: red;"><%= messageFailed %></p>
					<% } %>
					
					<% if (typeof messageSuccess !== 'undefined') { %>
						<p style="color: green;"><%= messageSuccess %></p>
					<% } %>

					<div class="form-wrapper">
						<p style="margin-top: 1rem;">Existing User ?  <a href="/login" class="" style="text-decoration: none;"> Log in Here</a></p>
					</div>
					

				</form>
			</div>
		</div>
		
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    </body>
</html>